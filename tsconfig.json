{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "sourceMap": false,
    "alwaysStrict": true,
    "allowJs": false,
    "lib": [
      "es2015"
    ],
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules",
      "app/helpers/interfaces"
    ]
  },
  "exclude": [
    "node_modules",
    "public/*",
    ".idea",
    ".git",
    "dist"
  ],
  "include": [
    "./**/*",
    ".storage/*"
  ]
}
